{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

<section class="container">

    <div class="row justify-content-center">

        <div class="col-6">

            <h1>Inscription</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}

                {{ form_row(registrationForm.nom, {label: 'Nom :'}) }}

                {{ form_row(registrationForm.prenom, {label: 'Prénom :'}) }}

                {{ form_row(registrationForm.telephone, {label: 'Téléphone :'}) }}

                {{ form_row(registrationForm.adresse, {label: 'Adresse :'}) }}

                {{ form_row(registrationForm.cp, {label: 'Code Postale :'}) }}

                {{ form_row(registrationForm.ville, {label: 'Ville :'}) }}

                {{ form_row(registrationForm.email, {label: 'Email :'}) }}

                {{ form_row(registrationForm.plainPassword, { label: 'Mot de passe :'}) }}

                {{ form_row(registrationForm.Accepter) }}

                <div class="d-flex justify-content-center mb-3">

                    <button type="submit" class="btn">Envoyer</button>

                </div>
                
            {{ form_end(registrationForm) }}

        </div>
    
    </div>

</section>

{% endblock %}
